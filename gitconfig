[include]
    path = ~/.gitconfig.local
[advice]
    statusHints = false # Slightly less verbose status output
[user]
	email = dan.strokirk@gmail.com
	name = Dan Strokirk
[core]
    pager = less -F -X
[push]
	default = upstream
[alias]
    amend = commit --amend --verbose
    axe = log -p -G
    branch-files = diff origin/master...HEAD --diff-filter=AM --name-only
    branch-name = rev-parse --abbrev-ref HEAD
    changed = "!(git diff --name-only --staged --diff-filter=AM ; git diff --name-only --diff-filter=AM;) | sort -u"
    done = "!git fetch && git rebase origin/master"
    edit-changed = "!$EDITOR $(git changed)"
    publish = "!git push --set-upstream origin $(git branch-name)"
    reset-upstream = "!git reset --hard $(git upstream)"
    sync = fetch origin master:master
    undo = reset --soft HEAD^
    unstage = reset HEAD
    upstream = rev-parse --abbrev-ref --symbolic-full-name "@{upstream}"
    finish = "!git-finish"

    # List aliases
    aliases = "!git config --list | grep '^alias' | sort | sed 's/^alias.//'"
    branches = branch -v
    tags = tag -l

    s = status
    d = diff
    ds = diff --staged
    ap = add --patch
    co = checkout
    cp = checkout --patch
    up = reset HEAD --patch
    cc = commit -v
    cm = commit -v -m
    rim = "!git fetch && git rebase -i origin/master"
    rup = "!git reset-upstream"
    prom = pull --rebase origin master

    pwd = status -sb
    sha = log -1 --format='%H'
    lgb = log master..HEAD
    lgg = log --graph --pretty=oneline --abbrev-commit
    lol = log --oneline --graph --decorate --all
    lil = log --oneline --graph --decorate
    lp = log --patch-with-stat
    ls = log --pretty=format:\"%C(yellow)%h%Cred%d %Creset%s%Cblue [%cn]\" --decorate
