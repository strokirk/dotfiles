#!/usr/bin/env zsh
set -e

if [ -n $(command -v brew) ]; then
  echo ""
  echo "Updating Homebrew..."
  echo ""
  brew update && brew upgrade && brew cleanup
fi

if [ -n $(command -v uv) ]; then
  echo ""
  echo "Updating UV tools..."
  echo ""
  uv tool upgrade --all
fi

if [ -n ${DOTFILES_DIR} ]; then
  echo ""
  echo "Updating dotfiles..."
  echo ""
  (cd ${DOTFILES_DIR} && git pull)
fi
