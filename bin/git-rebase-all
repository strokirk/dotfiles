#!/usr/bin/env bash

branches=()
while IFS='' read -r line; do branches+=("$line"); done < <(
    git for-each-ref --format='%(refname)' refs/heads |
        sed 's:refs/heads/::' |
        grep -v master |
        grep -v wip
    )

for branch in "${branches[@]}"; do
    git checkout "$branch";
    git rebase master || git rebase --abort;
done;
