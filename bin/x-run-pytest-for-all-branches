#!/usr/bin/env bash

branches=()
while IFS='' read -r line; do branches+=("$line"); done < <(
    git for-each-ref --format='%(refname)' refs/heads |
        sed 's:refs/heads/::' |
        grep -v master |
        grep -v wip
    )

RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
RESET=$(tput sgr0)

for branch in "${branches[@]}"; do
    echo "$branch"
    git checkout "$branch" --quiet;

    pytest -m unit -qq -p no:sugar -x
    err=$?
    if [ $err -eq 0 ]; then
        echo ""
        echo "${GREEN}Tjoho! ðŸŽ‰${RESET}"
        echo ""
    else
        echo ""
        echo "${RED}Va?! Nee... ðŸ˜¥${RESET}"
        echo ""
    fi
done;

git checkout master
